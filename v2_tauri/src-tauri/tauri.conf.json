{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ultra-font-installer",
  "version": "0.1.0",
  "identifier": "com.ulai.ultrafontinstaller",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run web:dev",
    "beforeBuildCommand": "npm run web:build"
  },
  "app": {
    "windows": [
      {
        "title": "Ultra Font Installer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "shadow": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://fonts.gstatic.com; img-src 'self' data:; font-src 'self' data: https://fonts.gstatic.com;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["scripts/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
